<!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
<suite name="Test_Android">
    <parameter name="devicePlatform" value="android"/>
    <listeners>
        <listener class-name="listeners.RetryListener"/>
    </listeners>
    <test name="Do_SignUp" preserve-order="true">
        <parameter name="runDestination" value="Local"/> <!-- Local / genymotion / emulator-->
        <parameter name="devicePlatform" value="android"/> <!-- fastReset -->
        <parameter name="myEmail" value="abb@com.com"/>
        <parameter name="myPassword" value="abcabc"/>
        <parameter name="deviceName"
                   value="emulator-5558"/>
        <classes>
            <class name="SignUpTest"/>
        </classes>
    </test>
    <test name="Do_Login" preserve-order="true">

        <parameter name="deviceName" value="emulator-5558"/>
        <!--<parameter name="deviceName" value="ce12160c130ae41504"/>-->
        <groups>
            <dependencies>
                <group name="group2" depends-on="group1"/>
            </dependencies>
        </groups>
        <classes>
            <class name="SingInTest"/>
        </classes>
    </test>
    <test name="Do_Login_Gmail" preserve-order="true">
        <parameter name="url" value="http://gmail.com"/>
        <parameter name="deviceName"
                   value="emulator-5558"/>
        <classes>
            <class name="GmailLoginTest"/>
        </classes>
    </test>
</suite>